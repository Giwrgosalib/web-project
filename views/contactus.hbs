<form id="contactForm" class="bg-secondary-subtle bg-gradient align-items-center" method="post">
    <div class="container align-items-center justify-content-center">
        <h4 class="fw-bolder">Contact us</h4>
        <p>If you have any questions about our tennis club, you can fill the form below with your questions and we will
            do our best to answer them as soon as possible!</p>
        <div class="form-group row">
            <div class="col-4 mb-0">
                <label for="name" class="form-label">Full name</label>
                <input type="text" name="fullName" id="name" class="form-control form-control-sm" required>
            </div>

            <div class="col-4 mb-0">
                <label for="emailInput" class="form-label">Email address</label>
                <input type="email" name="emailInput" id="mail" class="form-control form-control-sm" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="message" class="form-label col-sm-4">Message area</label>
            <textarea name="message" id="message" class="form-control col-sm-4"
                style="height: auto; font-size:16px; padding: 0.75rem;" required></textarea>
        </div>
        <div class="row">
            <div class="col-md-12 m-4">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </div>
    </div>
</form>


